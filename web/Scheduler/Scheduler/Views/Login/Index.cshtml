@model Scheduler.Models.Autorization.LoginViewModel

@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="centered"><h2>@ViewBag.Title.</h2></div>
<div class="row">

    <div class="col-md-4">
    </div>
    <div class="col-md-4 container body-content">


        <section id="loginForm">

            @using (Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="centered"><h4>Хотите узнать что на сегодня запланированно?</h4></div>
                    <hr />
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="centered">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>

                    </div>
                    <div class="form-group centered">
                        <input type="submit" value="Войти" class="btn btn-default" />
                    </div>
                    <p class="centered">
                        @Html.ActionLink("Зарегистрироваться", "Register") Если у вас еще нет аккаунта.
                    </p>
            }
        </section>
    </div>
    <div class="col-md-4">
        <section id="socialLoginForm"></section>
    </div>

</div>
